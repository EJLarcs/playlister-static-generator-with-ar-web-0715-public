
<!DOCTYPE html>
<html lang = "en">
<!--remember to put language-->
<head>
  <meta charset="utf-8">
    <title>Artist Show</title>
  <!--key area for websearch-->
</head>
<body>

  <!--display artist name-->
  <h1> <%= @artist.name %> </h1>
  <!--display each song  -->
  <h2> <% @artist.songs.each do |song| %>

    <a href="<%= song.to_slug %>.html"><%= song.name %></a>
    <% end %> </h2>
  <!--display each genre-->
  <h2><% @artist.genres.each do |genre| %>
  
    <a href="<%= genre.to_slug %>.html"><%= genre.name %></h2>
        <% end %>
</body>
</html>
